/ {
	pwmleds {
		compatible = "pwm-leds";

		pwmi_ir {
			label = "PWM-IR";
			pwms = <&pwm6 0 25000 0>;
			max-brightness = <100>;
			linux,default-trigger = "default-on";
		};
	};

	vcc2v8_avdd: vcc2v8_avdd {
		compatible = "regulator-fixed";
		gpio = <&gpio3 RK_PC6 GPIO_ACTIVE_HIGH>;
		regulator-name = "vcc2v8_avdd";
		regulator-min-microvolt = <2800000>;
		regulator-max-microvolt = <2800000>;
		enable-active-high;
		pinctrl-names = "default";
		pinctrl-0 = <&vcc2v8_avdd_pin>;
	};

	vcc1v2_dvdd: vcc1v2_dvdd {
		compatible = "regulator-fixed";
		gpio = <&gpio3 RK_PC7 GPIO_ACTIVE_HIGH>;
		regulator-name = "vcc1v2_dvdd";
		regulator-min-microvolt = <1200000>;
		regulator-max-microvolt = <1200000>;
		enable-active-high;
		pinctrl-names = "default";
		pinctrl-0 = <&vcc1v2_dvdd_pin>;
	};

	vcc1v8_dovdd: vcc1v8_dovdd {
		compatible = "regulator-fixed";
		gpio = <&gpio3 RK_PD0 GPIO_ACTIVE_HIGH>;
		regulator-name = "vcc1v8_dovdd";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <1800000>;
		enable-active-high;
		pinctrl-names = "default";
		pinctrl-0 = <&vcc1v8_dovdd_pin>;
	};
};

&csi2_dphy_hw {
	status = "okay";
};

&csi2_dphy0 {
	status = "okay";

	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@0 {
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <0>;

			csi_dphy_input0: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&imx307_out>;
				data-lanes = <1 2 3 4>;
			};
		};

		port@1 {
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;

			csi_dphy_output: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&mipi_csi2_input>;
			};
		};
	};
};

