	imx307: imx307@1a {
		compatible = "sony,imx307";
		status = "okay";
		reg = <0x1a>;
		clocks = <&cru MCLK_REF_MIPI0>;
		clock-names = "xvclk";
		reset-gpios = <&gpio3 RK_PC5 GPIO_ACTIVE_HIGH>;
		pwdn-gpios = <&gpio3 RK_PD3 GPIO_ACTIVE_HIGH>;
		avdd-supply = <&vcc2v8_avdd>;
		dovdd-supply = <&vcc1v8_dovdd>;
		dvdd-supply = <&vcc1v2_dvdd>;
		pinctrl-names = "default";
		pinctrl-0 = <&mipi_refclk_out0 &sc530ai_rst &sc530ai_pwdn>;
		rockchip,camera-module-index = <0>;
		rockchip,camera-module-facing = "back";
		rockchip,camera-module-name = "CMK-OT2115-PC1";
		rockchip,camera-module-lens-name = "30IRC-F16";
		//lens-focus = <&cam_ircut0>;
		port {
			imx307_out: endpoint {
				remote-endpoint = <&csi_dphy_input0>;
				data-lanes = <1 2 3 4>;
			};
		};
	};
};

&mipi0_csi2 {
	status = "okay";

	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@0 {
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <0>;

			mipi_csi2_input: endpoint@1 {
				reg = <1>;
				remote-endpoint = <&csi_dphy_output>;
			};
		};

		port@1 {
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;

			mipi_csi2_output: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&cif_mipi_in>;
			};
		};
	};
};

&pwm6 {
	status = "okay";
	pinctrl-names = "active";
	pinctrl-0 = <&pwm6m1_pins>;
};

&rkcif {
	status = "okay";
};

&rkcif_mipi_lvds {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&mipi_pins>;
	port {
		/* MIPI CSI-2 endpoint */
		cif_mipi_in: endpoint {
			remote-endpoint = <&mipi_csi2_output>;
		};
	};
};

&rkcif_mipi_lvds_sditf {
	status = "okay";

	port {
		/* MIPI CSI-2 endpoint */
		mipi_lvds_sditf: endpoint {
			remote-endpoint = <&isp_in>;
		};
	};
};

&rkisp {
	status = "okay";
};

&rkisp_vir0 {
	status = "okay";

	port@0 {
		isp_in: endpoint {
			remote-endpoint = <&mipi_lvds_sditf>;
		};
	};
};

&pinctrl {
	mipi {
		/omit-if-no-ref/
		sc530ai_rst: sc530ai_rst {
			rockchip,pins =
				<3 RK_PC5 0 &pcfg_pull_up>;
		};
		/omit-if-no-ref/
		sc530ai_pwdn: sc530ai_pwdn {
			rockchip,pins =
				<3 RK_PD3 0 &pcfg_pull_up>;
		};
		/omit-if-no-ref/
		vcc2v8_avdd_pin: vcc2v8_avdd_pin {
			rockchip,pins =
				<3 RK_PC6 0 &pcfg_pull_up>;
		};
		/omit-if-no-ref/
		vcc1v2_dvdd_pin: vcc1v2_dvdd_pin {
			rockchip,pins =
				<3 RK_PC7 0 &pcfg_pull_up>;
		};
		/omit-if-no-ref/
		vcc1v8_dovdd_pin: vcc1v8_dovdd_pin {
			rockchip,pins =
				<3 RK_PD0 0 &pcfg_pull_up>;
		};
	};
};